<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="50"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock TextAlignment ="Center">Entrees</TextBlock>
            <Button Name="AngryChickenButton">Angry Chicken</Button>
            <Button Name="CowPokeChiliButton">Cow PokeChili</Button>
            <Button Name="DakotaDoubleBurgerButton">Dakota Double Burger</Button>
            <Button Name="PecosPulledPorkButton">Pecos Pulled Pork</Button>
            <Button Name="RustlersRibsButton">Rustler's Ribs</Button>
            <Button Name="TexasTripleBurgerButton">Texas Triple Burger</Button>
            <Button Name="TrailBurgerButton">Trailburger</Button>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock TextAlignment ="Center">Sides</TextBlock>
            <Button>Angry Chicken</Button>
            <Button>Cow PokeChili</Button>
            <Button>Baked Beans</Button>
            <Button>Chilli Cheese Fries</Button>
            <Button>Corn Dodgers</Button>
            <Button>Pan De Campo</Button>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <TextBlock TextAlignment ="Center">Drinks</TextBlock>
            <Button>Angry Chicken</Button>
            <Button>Cow PokeChili</Button>
            <Button>Cowboy Coffee</Button>
            <Button>Jerked Soda</Button>
            <Button>Texas Tea</Button>
            <Button>Water</Button>
        </StackPanel>

        <StackPanel Grid.Column="3">
            <TextBlock TextAlignment ="Center">Order</TextBlock>
            <Button>Angry Chicken</Button>
            <Button>Cow PokeChili</Button>

        </StackPanel>
        
    </Grid>
</UserControl>