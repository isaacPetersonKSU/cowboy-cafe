<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="60"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <TextBlock TextAlignment ="Center">Entrees</TextBlock>
            <Button>Angry Chicken</Button>
            <Button>Cowpoke Chili</Button>
            <Button>Dakota Double Burger</Button>
            <Button>Pecos Pulled Pork</Button>
            <Button>Rustlers Ribs</Button>
            <Button>Texas Triple Burger</Button>
            <Button>Trailburger</Button>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock TextAlignment ="Center">Sides</TextBlock>
            <Button>Baked Beans</Button>
            <Button>Chilli Cheese Fries</Button>
            <Button>Corn Dodgers</Button>
            <Button>Pan De Campo</Button>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <TextBlock TextAlignment ="Center">Drinks</TextBlock>
            <Button>Cowboy Coffee</Button>
            <Button>Jerked Soda</Button>
            <Button>Texas Tea</Button>
            <Button>Water</Button>
        </StackPanel>

        <StackPanel Grid.Column="3">
            <TextBlock TextAlignment ="Center">Order</TextBlock>
            
        </StackPanel>
    </Grid>
</UserControl>
