<UserControl x:Class="PointOfSale.OrderSummeryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">

    <UserControl.Resources>
        
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="20" Height="0.05*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition MinHeight="20" Height="0.05*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="2"
                   TextAlignment="Center" Text="order #"/>

        <StackPanel Grid.Row="1">
            <ListView Name="OrderListView"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <ListView Name="OrderPriceView"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="Subtotal"/>

        <TextBlock Grid.Row="2" Grid.Column="1" 
                   Text="{Binding Path=Subtotal, StringFormat=c}"/>
    </Grid>
</UserControl>