<UserControl x:Class="PointOfSale.OrderItemCostomizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Top" Background="SaddleBrown" Width="400" HorizontalAlignment="Center">

        <Label x:Name="OrderItemName"/>

        <StackPanel x:Name="SizeSelector" Visibility="Collapsed"  Margin="0,0,0,40">
            <RadioButton Content="Small" IsChecked="True"/>
            <RadioButton Content="Medium"/>
            <RadioButton Content="Large"/>
        </StackPanel>

        <CheckBox Name="BunSelector">Bun</CheckBox>
        <CheckBox Name="PickleSelector">Pickle</CheckBox>
        <CheckBox Name="CheeseSelector">Cheese</CheckBox>
        <CheckBox Name="KetchupSelector">Ketchup</CheckBox>
        <CheckBox Name="MustardSelector">Mustard</CheckBox>
        <CheckBox Name="TomatoSelector">Tomato</CheckBox>
        <CheckBox Name="LettuceSelector">Lettuce</CheckBox>
        <CheckBox Name="MayoSelector">Mayo</CheckBox>
        <CheckBox Name="BaconSelector">Bacon</CheckBox>
        <CheckBox Name="EggSelector">Egg</CheckBox>

        <CheckBox Name="IceSelector">Ice</CheckBox>
        <CheckBox Name="CreamSelector">Leave room for cream</CheckBox>
        <CheckBox Name="DecafSelector" IsChecked="{Binding Path=Decaf}">Decaf</CheckBox>
        <CheckBox Name="SweetSelector">Sweet</CheckBox>
        <CheckBox Name="LemonSelector">Lemon</CheckBox>

        <StackPanel Name="FlavorSelector" Visibility="Collapsed" Margin="0,40,0,0">
            <RadioButton IsChecked="True">Cream Soda</RadioButton>
            <RadioButton>Orange Soda</RadioButton>
            <RadioButton>Sarsparilla</RadioButton>
            <RadioButton>Birch Beer</RadioButton>
            <RadioButton>Root Beer</RadioButton>
        </StackPanel>

    </StackPanel>
</UserControl>
